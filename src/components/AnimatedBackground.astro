---
// Enhanced Animated Background Component inspired by candycode.com
---

<div class="animated-background">
    <div class="floating-shapes">
        <!-- Main floating shapes -->
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
        <div class="shape shape-5"></div>
        <div class="shape shape-6"></div>
        <div class="shape shape-7"></div>
        <div class="shape shape-8"></div>

        <!-- Additional smaller particles -->
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
        <div class="particle particle-3"></div>
        <div class="particle particle-4"></div>
        <div class="particle particle-5"></div>
        <div class="particle particle-6"></div>
    </div>

    <!-- Gradient overlay for depth -->
    <div class="gradient-overlay"></div>
</div>

<style>
    .animated-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
        overflow: hidden;
    }

    .floating-shapes {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 50% 50%, transparent 0%, rgba(10, 10, 10, 0.3) 100%);
        pointer-events: none;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        opacity: 0.08;
        animation: float 20s infinite linear;
        background: linear-gradient(135deg, #ff6b9d, #4ecdc4);
        filter: blur(1px);
    }

    .particle {
        position: absolute;
        border-radius: 50%;
        opacity: 0.15;
        background: radial-gradient(circle, #ffe66d, transparent);
        animation: sparkle 15s infinite linear;
    }

    /* Main shapes */
    .shape-1 {
        width: 120px;
        height: 120px;
        left: 5%;
        animation-delay: 0s;
        animation-duration: 35s;
        background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 50%, #ffe66d 100%);
    }

    .shape-2 {
        width: 80px;
        height: 80px;
        left: 15%;
        animation-delay: -8s;
        animation-duration: 28s;
        background: linear-gradient(135deg, #4ecdc4, #ffe66d);
    }

    .shape-3 {
        width: 100px;
        height: 100px;
        left: 30%;
        animation-delay: -15s;
        animation-duration: 32s;
        background: linear-gradient(135deg, #ffe66d, #ff6b9d);
    }

    .shape-4 {
        width: 60px;
        height: 60px;
        left: 45%;
        animation-delay: -22s;
        animation-duration: 25s;
        background: linear-gradient(135deg, #ff6b9d, #4ecdc4);
    }

    .shape-5 {
        width: 140px;
        height: 140px;
        left: 60%;
        animation-delay: -5s;
        animation-duration: 40s;
        background: linear-gradient(135deg, #4ecdc4 0%, #ff6b9d 50%, #ffe66d 100%);
    }

    .shape-6 {
        width: 90px;
        height: 90px;
        left: 75%;
        animation-delay: -18s;
        animation-duration: 30s;
        background: linear-gradient(135deg, #ffe66d, #4ecdc4);
    }

    .shape-7 {
        width: 70px;
        height: 70px;
        left: 85%;
        animation-delay: -12s;
        animation-duration: 26s;
        background: linear-gradient(135deg, #ff6b9d, #ffe66d);
    }

    .shape-8 {
        width: 110px;
        height: 110px;
        left: 95%;
        animation-delay: -25s;
        animation-duration: 38s;
        background: linear-gradient(135deg, #4ecdc4, #ff6b9d);
    }

    /* Particles */
    .particle-1 {
        width: 20px;
        height: 20px;
        left: 20%;
        animation-delay: -3s;
        animation-duration: 20s;
    }

    .particle-2 {
        width: 15px;
        height: 15px;
        left: 40%;
        animation-delay: -10s;
        animation-duration: 18s;
    }

    .particle-3 {
        width: 25px;
        height: 25px;
        left: 60%;
        animation-delay: -7s;
        animation-duration: 22s;
    }

    .particle-4 {
        width: 18px;
        height: 18px;
        left: 80%;
        animation-delay: -14s;
        animation-duration: 19s;
    }

    .particle-5 {
        width: 12px;
        height: 12px;
        left: 10%;
        animation-delay: -20s;
        animation-duration: 16s;
    }

    .particle-6 {
        width: 22px;
        height: 22px;
        left: 90%;
        animation-delay: -2s;
        animation-duration: 24s;
    }

    @keyframes float {
        0% {
            transform: translateY(100vh) rotate(0deg) scale(0.8);
            opacity: 0;
        }
        5% {
            opacity: 0.08;
        }
        50% {
            transform: translateY(50vh) rotate(180deg) scale(1);
            opacity: 0.12;
        }
        95% {
            opacity: 0.08;
        }
        100% {
            transform: translateY(-10vh) rotate(360deg) scale(0.8);
            opacity: 0;
        }
    }

    @keyframes sparkle {
        0% {
            transform: translateY(100vh) scale(0);
            opacity: 0;
        }
        10% {
            opacity: 0.15;
            transform: translateY(90vh) scale(1);
        }
        50% {
            opacity: 0.3;
            transform: translateY(50vh) scale(1.2);
        }
        90% {
            opacity: 0.15;
            transform: translateY(10vh) scale(1);
        }
        100% {
            transform: translateY(-5vh) scale(0);
            opacity: 0;
        }
    }

    /* Organic movement patterns */
    .shape:nth-child(odd) {
        animation-name: floatOrganic1;
    }

    .shape:nth-child(even) {
        animation-name: floatOrganic2;
    }

    @keyframes floatOrganic1 {
        0% {
            transform: translateY(100vh) translateX(0) rotate(0deg) scale(0.8);
            opacity: 0;
        }
        5% {
            opacity: 0.08;
        }
        20% {
            transform: translateY(80vh) translateX(-30px) rotate(72deg) scale(0.9);
        }
        40% {
            transform: translateY(60vh) translateX(20px) rotate(144deg) scale(1.1);
        }
        60% {
            transform: translateY(40vh) translateX(-15px) rotate(216deg) scale(1);
        }
        80% {
            transform: translateY(20vh) translateX(25px) rotate(288deg) scale(0.9);
        }
        95% {
            opacity: 0.08;
        }
        100% {
            transform: translateY(-10vh) translateX(0) rotate(360deg) scale(0.8);
            opacity: 0;
        }
    }

    @keyframes floatOrganic2 {
        0% {
            transform: translateY(100vh) translateX(0) rotate(0deg) scale(0.8);
            opacity: 0;
        }
        5% {
            opacity: 0.08;
        }
        25% {
            transform: translateY(75vh) translateX(35px) rotate(-90deg) scale(0.9);
        }
        45% {
            transform: translateY(55vh) translateX(-25px) rotate(-180deg) scale(1.1);
        }
        65% {
            transform: translateY(35vh) translateX(20px) rotate(-270deg) scale(1);
        }
        85% {
            transform: translateY(15vh) translateX(-30px) rotate(-360deg) scale(0.9);
        }
        95% {
            opacity: 0.08;
        }
        100% {
            transform: translateY(-10vh) translateX(0) rotate(-450deg) scale(0.8);
            opacity: 0;
        }
    }

    /* Responsive adjustments */
    @media (max-width: 1024px) {
        .shape {
            opacity: 0.06;
        }

        .particle {
            opacity: 0.1;
        }
    }

    @media (max-width: 768px) {
        .shape {
            opacity: 0.04;
        }

        .particle {
            opacity: 0.08;
        }

        .shape-1,
        .shape-5,
        .shape-8 {
            width: 60px;
            height: 60px;
        }

        .shape-2,
        .shape-3,
        .shape-6,
        .shape-7 {
            width: 40px;
            height: 40px;
        }

        .shape-4 {
            width: 30px;
            height: 30px;
        }

        .particle {
            width: 8px;
            height: 8px;
        }
    }

    /* Reduce motion for accessibility */
    @media (prefers-reduced-motion: reduce) {
        .shape,
        .particle {
            animation: none;
            opacity: 0.02;
        }

        .gradient-overlay {
            opacity: 0.5;
        }
    }

    /* Performance optimization */
    .shape,
    .particle {
        will-change: transform, opacity;
        backface-visibility: hidden;
        transform-style: preserve-3d;
    }
</style>
