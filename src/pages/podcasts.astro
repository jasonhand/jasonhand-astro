---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Podcasts - Jason Hand">
    <!-- Hero Section -->
    <section class="section-hero relative">
        <div class="max-w-4xl mx-auto text-center relative z-10">
            <h1 class="mb-8">
                <span class="scattered-letters">
                    <span>P</span><span>o</span><span>d</span><span>c</span><span>a</span><span>s</span><span>t</span><span>s</span>
                </span>
            </h1>
            <p class="text-xl md:text-2xl mb-12 max-w-2xl mx-auto">
                Exploring technology, community, and developer relations through engaging podcast conversations and discussions.
            </p>
        </div>
    </section>

    <!-- Podcast Shows Section -->
    <section class="section">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-center mb-8">
                <span class="scattered-letters">
                    <span>S</span><span>h</span><span>o</span><span>w</span><span>s</span>
                </span>
            </h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- AI Tools Lab -->
                <div class="project-card group cursor-pointer" onclick="window.location.href='/podcasts/ai-tools-lab'">
                    <div class="mb-4">
                        <img src="/images/ai-tools-lab-logo.png" alt="AI Tools Lab Logo" class="w-16 h-16 object-contain" />
                    </div>
                    <h3 class="mb-4 gradient-text">AI Tools Lab</h3>
                    <p class="mb-4">Experimental discussions about AI tools, applications, and the future of technology in developer workflows.</p>
                    <a href="/podcasts/ai-tools-lab" class="btn btn-outline">View Episodes</a>
                </div>

                <!-- The Community Pulse -->
                <div class="project-card group cursor-pointer" onclick="window.location.href='/podcasts/community-pulse'">
                    <div class="mb-4">
                        <img src="/images/CommunityPulse.png" alt="The Community Pulse Logo" class="w-16 h-16 object-contain" />
                    </div>
                    <h3 class="mb-4 gradient-text-secondary">The Community Pulse</h3>
                    <p class="mb-4">Deep conversations about developer relations, community building, and the evolving tech landscape.</p>
                    <a href="/podcasts/community-pulse" class="btn btn-outline">View Episodes</a>
                </div>

                <!-- After Pulse -->
                <div class="project-card group cursor-pointer" onclick="window.location.href='/podcasts/after-pulse'">
                    <div class="mb-4">
                        <img src="/images/AfterPulse.png" alt="After Pulse Logo" class="w-16 h-16 object-contain" />
                    </div>
                    <h3 class="mb-4 gradient-text">After Pulse</h3>
                    <p class="mb-4">Extended discussions and follow-up conversations from The Community Pulse episodes.</p>
                    <a href="/podcasts/after-pulse" class="btn btn-outline">View Episodes</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Episodes Section -->
    <section class="section">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-center mb-16">
                <span class="scattered-letters">
                    <span>F</span><span>e</span><span>a</span><span>t</span><span>u</span><span>r</span><span>e</span><span>d</span>
                </span>
                <br />
                <span class="scattered-letters">
                    <span>E</span><span>p</span><span>i</span><span>s</span><span>o</span><span>d</span><span>e</span><span>s</span>
                </span>
            </h2>
            <div class="grid gap-8">
                <!-- Latest Community Pulse Episode -->
                <div class="project-card">
                    <div class="grid md:grid-cols-2 gap-8 items-center">
                        <div>
                            <div class="w-full h-64 bg-gradient-to-br from-primary/20 to-secondary/20 rounded-lg flex items-center justify-center mb-6">
